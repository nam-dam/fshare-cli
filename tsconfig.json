{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "outDir": "build",
    "declaration": false,
    "esModuleInterop": true,
    "isolatedModules": false,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": false,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "strictNullChecks": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
